import { NestFactory } from '@nestjs/core';
import { AppModule } from './app.module';
import { Logger, ValidationPipe } from '@nestjs/common';
import { SwaggerModule, DocumentBuilder } from '@nestjs/swagger';

async function bootstrap() {
  const app = await NestFactory.create(AppModule);
  const logger = new Logger('Bootstrap');

  // –í–∫–ª—é—á–∞–µ–º –≤–∞–ª–∏–¥–∞—Ü–∏—é –≤—Ö–æ–¥–Ω—ã—Ö –¥–∞–Ω–Ω—ã—Ö
  app.useGlobalPipes(new ValidationPipe());

  // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –≥–ª–æ–±–∞–ª—å–Ω—ã–π –ø—Ä–µ—Ñ–∏–∫—Å –¥–ª—è –≤—Å–µ—Ö –º–∞—Ä—à—Ä—É—Ç–æ–≤ API
  app.setGlobalPrefix('api/v1');

  // –ù–∞—Å—Ç—Ä–æ–π–∫–∞ Swagger (–¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è API)
  const config = new DocumentBuilder()
    .setTitle('Tele‚Ä¢Ga API')
    .setDescription('–î–æ–∫—É–º–µ–Ω—Ç–∞—Ü–∏—è API')
    .setVersion('1.0')
    .addBearerAuth()
    .build();

  const document = SwaggerModule.createDocument(app, config);
  SwaggerModule.setup('api', app, document);

  // ‚úÖ –í–æ—Ç –∑–¥–µ—Å—å –º—ã –û–ë–™–Ø–í–õ–Ø–ï–ú –ø–µ—Ä–µ–º–µ–Ω–Ω—É—é port –ø–µ—Ä–µ–¥ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º
  const port = process.env.PORT || 3030;

  await app.listen(port);

  logger.log(`üöÄ Server is running on http://localhost:${port}`);
  logger.log(`üìÑ Swagger API –¥–æ—Å—Ç—É–ø–Ω–∞ –ø–æ –∞–¥—Ä–µ—Å—É: http://localhost:${port}/api`);
  logger.log(`üì¶ –ú–∞—Ä—à—Ä—É—Ç—ã API –Ω–∞—á–∏–Ω–∞—é—Ç—Å—è —Å: http://localhost:${port}/api/v1/...`);
}

bootstrap(); 